<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Ascent" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/accent_color_primary</item>
        <item name="colorPrimaryVariant">@color/accent_color_primary_light</item>
        <item name="colorOnPrimary">@color/accent_color_on_primary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <item name="textAppearanceButton">@style/Widget.MaterialComponents.Button.TextButton</item>

        <!-- Customize your theme here. -->
    </style>

    <style name="AccentTextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/accent_color_primary_light</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>