<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    android:orientation="vertical">


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/contactsList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:itemCount="10"
        tools:listitem="@layout/item_friend" />


    <TextView
        android:id="@+id/allowRationaleTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="136dp"
        android:text="@string/allow_ascent_to_use_your_contacts"
        android:textColor="@color/accent_color_primary"
        android:textSize="30sp"
        android:textStyle="bold"
        android:visibility="visible" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/allowReadContactsBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="60dp"
        android:text="Allow"
        android:textColor="@color/white"
        app:backgroundTint="@color/accent_color_primary" />

</RelativeLayout>